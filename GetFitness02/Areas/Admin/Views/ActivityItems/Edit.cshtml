@model GetFitness02.Models.Activity.ActivityItem

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center;">Edit</h1>

<h4 style="text-align:center;">You are editing the activity.</h4>
<div class="row" style="display:flex; justify-content:center; background:black; padding-top:50px; padding-bottom:50px; padding-left:20px;color:white;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActivityItemId" />
            <div class="form-group" style="padding-bottom:10px;">
                <label asp-for="ActivityName" class="control-label" style="display:inline-block; width:100px;">Activity</label>
                <input asp-for="ActivityName" class="form-control" />
                <span asp-validation-for="ActivityName" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom:10px;">
                <label asp-for="Calorie" class="control-label" style="display:inline-block; width:100px;">MET</label>
                <input asp-for="Calorie" class="form-control" />
                <span asp-validation-for="Calorie" class="text-danger"></span>
            </div>
            <div class="form-group" style="float:right;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="text-align:center; padding-top:20px;">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
