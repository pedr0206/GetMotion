@model GetFitness02.Models.Activity.ActivityEntry
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
}

<h1 class="text">Create</h1>

<h4 style="text-align:center;">Yor are adding a new activity.</h4>

<div class="row" style="display:flex; justify-content:center; background:black; padding-top:50px; padding-bottom:50px; padding-left:20px;color:white;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="padding-bottom:10px;">
                <label asp-for="Date" class="control-label" style="display:inline-block;"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom:10px;">
                <label asp-for="Duration" class="control-label" style="display:inline-block;">Duration (min)</label>
                <input asp-for="Duration" placeholder="minute" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label" style="display:inline-block;">Weight (kg)</label>
                <input asp-for="Weight" placeholder="kilogram" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 10px;">
                <label asp-for="ActivityItemId" class="control-label" style="display:inline-block;">Activity</label>
                <select asp-for="ActivityItemId" class="form-control" asp-items="ViewBag.ActivityItemId"></select>
            </div>
            <div class="form-group btn-submit">
                @if (SignInManager.IsSignedIn(User))
                {
                    <input type="submit" value="Create" class="btn btn-primary btn-submit" />
                }
                else
                {
                    <a class="btn-submit" asp-controller="Account" asp-action="Login">Login</a>
                }
                
            </div>
        </form>
    </div>
</div>

<div style="display:flex; justify-content:center; padding-top:20px;">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="Index">Back to List</a>
    }
    else
    {
        <a asp-area="" asp-controller="Account" asp-action="Login"></a>
    }

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
