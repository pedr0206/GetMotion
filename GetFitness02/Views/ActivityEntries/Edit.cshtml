@model GetFitness02.Models.Activity.ActivityEntry

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center;">Edit</h1>

<h4 style="text-align:center;">You are editing the activity.</h4>
<div class="row" style="display:flex; justify-content:center; background:black; padding-top:50px; padding-bottom:50px; padding-left:20px;color:white;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActivityEntryId" />
            <div class="form-group">
                <label asp-for="Date" class="control-label" style="display:inline-block;"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label" style="display:inline-block;"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label" style="display:inline-block;"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityItemId" class="control-label" style="display:inline-block;">Activity</label>
                <select asp-for="ActivityItemId" class="form-control" asp-items="ViewBag.ActivityItemId"></select>
                <span asp-validation-for="ActivityItemId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label" style="display:inline-block; width:110px;">User</label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>*@
            <div class="form-group btn-submit">
                <input type="submit" value="Save" class="btn-submit" />
            </div>
        </form>
    </div>
</div>

<div class="back-to-list">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
