@using Microsoft.AspNetCore.Identity
@using GetFitness02.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <div>
            <div style="padding-left:20px;">
                <a asp-area="" asp-controller="Home" asp-action="Index">Hello @UserManager.GetUserName(User)!</a>
            </div>
            <div style="padding-left:20px;">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </div>
        </div>
    </form>
}
else
{
    <div>
        @*<div style="float:left; padding-top:20px;">Need an account? <strong><a asp-area="" asp-controller="Account" asp-action="Register">Register here</a></strong></div>*@
        @*<div  style="float:left; padding-left:20px;"><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></div>*@
    </div>
}
